generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  schemas   = ["public", "auth"]
}




model Calendar {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String
  color       String
  events      Event[] 
    @@schema("public")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  date        DateTime
  description String?
  calendar    Calendar  @relation(fields: [calendarId], references: [id])
  calendarId  String
  timeSlots   TimeSlot[]
  @@schema("public")
}

model TimeSlot {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  isBooked  Boolean  @default(false)
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  @@schema("public")
}